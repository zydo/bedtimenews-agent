# Agent Backend Configuration
AGENT_BACKEND_HOST=agent # Agent Docker service name in docker-compose.yml (not container name)
AGENT_BACKEND_PORT=8000

# PostgreSQL Configuration
POSTGRES_HOST=postgres # Postgres Docker service name in docker-compose.yml (not container name)
POSTGRES_DB=postgres_db
POSTGRES_USER=postgres_user
POSTGRES_PASSWORD=postgres_password
POSTGRES_PORT=5432

# Keys 
OPENAI_API_KEY=sk-proj-...

# Embedding Model
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_BATCH_SIZE=20

# Chat Models
FAST_MODEL=gpt-5-mini # Fast model for routing, query rewriting, and document grading
GENERATION_MODEL=gpt-5.1 # Generation model for final answer generation

# Vector Search Configuration
# Similarity threshold for document retrieval (0.0-1.0, higher = stricter matching)
MATCH_THRESHOLD=0.4

# Indexer Configuration
# Cron schedule: "minute hour day month weekday"
# Examples:
#   Every hour: 0 * * * *
#   Every 30 min: */30 * * * *
#   Every 6 hours: 0 */6 * * *
#   Daily at 2 AM: 0 2 * * *
INDEXER_CRON_SCHEDULE=0 * * * *
